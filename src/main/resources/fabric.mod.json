{
  "schemaVersion": 1,
  "id": "buildable_campfire",
  "version": "${version}",

  "name": "Buildable Campfire",
  "description": "Deletes the Campfire Block recipes from the game and adds a new block called Campfire Log. You can place 4 Campfire Logs one after another and left click with a coal to create a unlit Campfire Block.",
  "authors": [
    "spacegoat3"
  ],
  "contact": {
    "homepage": "https://github.com/spacegoat3/BuildableCampfire",
    "issues": "https://github.com/spacegoat3/BuildableCampfire/issues"
  },

  "license": "MIT",
  "icon": "icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.spacegoat.buildable_campfire.ModMain"
    ],
    "modmenu": [
      "net.spacegoat.buildable_campfire.config.ModMenuIntegration"
    ],
    "client": [
      "net.spacegoat.buildable_campfire.ModClient"
    ]
  },

  "depends": {
    "fabricloader": ">=0.11.3",
    "fabric": "*",
    "minecraft": ["1.17", "1.17.1", "1.18", "1.18.1"],
    "java": ">=16",
    "cloth-config2": ">=5.0.34"
  },
  "suggests": {
    "another-mod": "*",
    "modmenu": "*"
  }
}
